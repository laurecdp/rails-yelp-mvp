<div class='container'>

<h1> <%= @restaurant.name %> </h1>

<ul> 
  <li> Address: <strong> <%= @restaurant.address %> </strong> </li>
  <li> Phone number: <strong> <%= @restaurant.phone_number %></strong> </li>
  <li> Category: <strong> <%= @restaurant.category %></strong> </li>
</ul>

<h3> Reviews </h3>

<ul class="list-inline"> <% @restaurant.reviews.each do |review| %>
  <li> <%= review.content %> <%= review.rating %> ‚≠ê</li> 
  <% end %>
</ul>

<h3> Leave a review </h3>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit %>
  <% end %>

<p> <%= link_to "Back to restaurants", restaurants_path %> </p>

</div>